<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/circlepurple"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/backIMG"
            android:background="@drawable/ic_keyboard_backspace_black_24dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Edit Profile"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>



    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">




                <RelativeLayout
                    android:layout_width="90dp"
                    android:layout_marginTop="@dimen/dimen_20dp"
                    android:layout_gravity="center"
                    android:layout_height="match_parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_profile"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/header_profileblack"
                        app:civ_border_color="@android:color/black"
                        app:civ_border_width="1dp" />



                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/img_plus"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_alignBottom="@id/img_profile"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="25dp"
                        android:src="@drawable/ic_add_black_24dp"
                        app:civ_shadow="true"
                        app:civ_shadow_radius="1" />
                </RelativeLayout>






            <EditText
                android:id="@+id/usernameET"
                android:hint="User Name"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:drawablePadding="10dp"
                android:textColorHint="@color/black"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:maxLength="30"
                android:drawableLeft="@drawable/ic_perm_identity_black_24dp"
                android:background="@drawable/buttonshape8"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

            <EditText
                android:id="@+id/emailET"
                android:hint="Email"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:drawableLeft="@drawable/email1"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:maxLength="30"
                android:background="@drawable/buttonshape8"
                android:layout_marginLeft="20dp"
                android:drawablePadding="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

            <EditText
                android:id="@+id/phoneET"
                android:hint="Phone"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:drawablePadding="10dp"
                android:textColorHint="@color/black"
                android:textSize="16dp"
                android:inputType="number"
                android:textColor="@color/black"
                android:maxLength="30"
                android:drawableLeft="@drawable/ic_local_phone_black"
                android:background="@drawable/buttonshape8"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

            <EditText
                android:id="@+id/permanentAddressET"
                android:hint="Permanent Address"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:drawablePadding="10dp"
                android:textColorHint="@color/black"
                android:textSize="16dp"
                android:inputType="number"
                android:textColor="@color/black"
                android:maxLength="30"
                android:drawableLeft="@drawable/map"
                android:background="@drawable/buttonshape8"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>


            <EditText
                android:id="@+id/priviousAddressET"
                android:hint="Previous Address"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:drawablePadding="10dp"
                android:textColorHint="@color/black"
                android:textSize="16dp"
                android:inputType="number"
                android:textColor="@color/black"
                android:maxLength="30"
                android:drawableLeft="@drawable/address"
                android:background="@drawable/buttonshape8"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

            <EditText
                android:id="@+id/pancardET"
                android:hint="Pan card"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:drawablePadding="10dp"
                android:textColorHint="@color/black"
                android:textSize="16dp"
                android:inputType="number"
                android:textColor="@color/black"
                android:maxLength="30"
                android:drawableLeft="@drawable/mastercard"
                android:background="@drawable/buttonshape8"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

            <EditText
                android:id="@+id/adharcarddET"
                android:hint="Aadhar card"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:drawablePadding="10dp"
                android:textColorHint="@color/black"
                android:textSize="16dp"
                android:inputType="number"
                android:textColor="@color/black"
                android:maxLength="30"
                android:drawableLeft="@drawable/creditcards"
                android:background="@drawable/buttonshape8"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

            <EditText
                android:id="@+id/familymemberET"
                android:hint="Family Member"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:drawablePadding="10dp"
                android:textColorHint="@color/black"
                android:textSize="16dp"
                android:inputType="number"
                android:textColor="@color/black"
                android:maxLength="30"
                android:drawableLeft="@drawable/usersfamily"
                android:background="@drawable/buttonshape8"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

            <EditText
                android:id="@+id/gardianET"
                android:hint="Gardians Name"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:drawablePadding="10dp"
                android:textColorHint="@color/black"
                android:textSize="16dp"
                android:inputType="number"
                android:textColor="@color/black"
                android:maxLength="30"
                android:drawableLeft="@drawable/userone"
                android:background="@drawable/buttonshape8"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>





            <Button
                android:id="@+id/saveBTN"
                android:text="SAVE"
                android:textColor="@color/white"
                android:background="@drawable/buttonshape4"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </ScrollView>





</LinearLayout>